<RelativeLayout android:id="@+id/learn_fragment"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#FFF"
    tools:context="com.wsandhu.conjugation.LearnActivity"
    xmlns:ads="http://schemas.android.com/apk/res-auto">

    <Spinner
        android:id="@+id/tense_spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true" />

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_marginTop="15dp"
        android:layout_above="@+id/adsContainer"
        android:layout_below="@+id/tense_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
    <TextView android:text="Placeholder text"
        android:id="@+id/learn_textview"
        android:textSize="18dp"
        android:textColor="#000"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    </ScrollView>

    <LinearLayout
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="16dp"
        android:id="@+id/adsContainer">

        <com.google.android.gms.ads.AdView
            android:id="@+id/adView1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            ads:adSize="BANNER"
            ads:adUnitId="@string/banner_ad_learn">
        </com.google.android.gms.ads.AdView>

    </LinearLayout>

</RelativeLayout>
